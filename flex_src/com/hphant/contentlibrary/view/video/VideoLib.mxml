<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" 
	xmlns:video="com.hphant.contentlibrary.view.video.*"
	width="100%"
	paddingLeft="10" paddingRight="10" paddingBottom="10" paddingTop="10"
	horizontalAlign="center"
	>


	<mx:HBox width="100%">
		<mx:Label text="Video Library" fontWeight="bold" fontSize="19"/>
	</mx:HBox>
	
	<mx:Spacer height="20"/>
		
	<mx:DataGrid width="100%" height="150">
		<mx:columns>
			<mx:DataGridColumn headerText="Short Description" dataField="col1"/>
			<mx:DataGridColumn headerText="Size" dataField="col2"/>
			<mx:DataGridColumn headerText="Date Added" dataField="col3"/>
		</mx:columns>
	</mx:DataGrid>

	<mx:Spacer height="20"/>
	
	<mx:HBox width="100%" horizontalAlign="center">
		<mx:Spacer width="50"/>
		<mx:Button label="Load File"/>
		<mx:Spacer width="100%"/>
		<mx:Button label="Select and Return"/>
		<mx:Spacer width="50"/>
	</mx:HBox>
	
	<!--	
	-->
	<video:VideoPlayerArea />	
	
</mx:VBox>
